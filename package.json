{
  "name": "mechanical-weather",
  "description": "React/Electron app using Arduino's serial weather data ",
  "author": "Pepeyen",
  "version": "1.2.0",
  "private": true,
  "build": {
    "appId": "com.mechanical-weather",
    "productName": "Mechanical Weather",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "icon": "build/icon.ico"
    },
    "artifactName": "Mechanical Weather.${ext}",
    "forceCodeSigning": false
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "npm run react-build && electron-builder --publish=always",
    "build": "npm run react-build && npm run electron-build",
    "start": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@electron/remote": "^1.1.0",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^12.8.3",
    "chart.js": "^3.1.1",
    "electron-is-dev": "^2.0.0",
    "node-sass": "^5.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.3",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "redux": "^4.0.5",
    "serialport": "^9.0.7",
    "web-vitals": "^1.1.1"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "electron": "^12.0.4",
    "electron-rebuild": "^2.3.5",
    "electron-builder": "^22.10.5",
    "wait-on": "^3.2.0"
  }
}
